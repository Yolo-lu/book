.search{
  margin: 30rpx 20rpx;
  background: #f4f4f4;
  text-align: center;
  position: relative;
  padding: 10rpx 0;
  border-radius: 14rpx;
}
.head{
  position: fixed;
  top: 0;
  left: 2.5%;
  right: 2.5%;
  background: #fff
}
.all{
  width: 90%;
  margin: auto
}
.body{
  margin-top: 126rpx
}
.searchbook{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  left: 23%;
  top: 16rpx
}
.close{
 width: 45rpx;
 height: 45rpx;
 position: absolute;
 right: 8%;
 top: 12rpx;
 z-index: 99
}
.other{
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  margin: auto;
}
.right3{
 color: rgba(230, 130, 17, 0.849);
 display: flex
}
.new{
  width: 32rpx;
  height: 32rpx;
  position: relative;
  top: 6rpx;
  right: 10rpx
}
.list{
  display: flex;
  flex-wrap: wrap;
}
.hotwords{
  margin: 20rpx
}
.word{
  padding: 10rpx;
  color: #fff
}
.book{
  display: flex;
  margin:50rpx 30rpx;
  border-bottom: 1px solid #f1f1f1;
}
.icon image{
  width: 200rpx;
  height: 280rpx
}
.right{
  margin-left: 20rpx
}
.right .titles{
  font-weight: bold;
}
.right .author{
  color: #666;
  margin: 10rpx 0;
  font-size: 28rpx
}
.right .authors{
   color: #666;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: wrap;
  width: 450rpx;
  height: 122rpx;
  font-size: 28rpx
}
.tags{
  display: flex;
  color: rgba(230, 130, 17, 0.849);
  font-size: 26rpx;
  margin-top: 20rpx
}